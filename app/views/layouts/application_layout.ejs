<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- stylesheet_link_tag('reset', 'style') %>
    <%- stylesheet_link_tag('http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css') %>
    <%- javascript_include_tag('https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js', 'rails', 'application') %>
    <%- csrf_meta_tag() %>
  </head>
  <body>
    <div class="container">
      <div class="content">
        <%- body %>
      </div>

    <footer>
      <p>&copy; Jakub Oboza 2011</p>
      <% if( request.session["logged_in"] == true ) {%>
        <p><%- link_to("Logout", path_to.session({id: "logout"}), {method: "delete"}) %></p>
      <% }%>
        <p><%- link_to("New Person", path_to.new_user) %></p>
    </footer>

    </div>
  </body>
</html>
